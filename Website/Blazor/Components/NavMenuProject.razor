<div class="top-row navbar navbar-dark" style="width: 100%; padding-top: 0; padding-bottom: 0">
    @if (!string.IsNullOrEmpty(Layout.ProjectCode) && File.Exists($"static/wideprojects/{Layout.ProjectCode}.png"))
    {
        @if (string.IsNullOrWhiteSpace(Layout.PreviewWide))
        {
            <a href="/overview">
                <img src="/static/wideprojects/@(Layout.ProjectCode).png" style="margin: auto; max-width: 100%; max-width: 100%; display: block" />
            </a>
        }
        else
        {
            <a href="/overview">
                <img src="@(Layout.PreviewWide)" style="margin: auto; max-width: 100%; max-width: 100%; display: block" />
            </a>
        }
    }
</div>
@{
    string overview = $"/project/{Layout.ProjectCode}";
    string issues = $"/project/{Layout.ProjectCode}/issues";
    string stats = $"/project/{Layout.ProjectCode}/statistics";
}
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Config.Instance.MainRedirectTo" Match="NavLinkMatch.All">
                <span class="bi bi-compass-fill-nav-menu" aria-hidden="true"></span> @Localizer["navmenu_overview"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @Localizer["navmenu_projects"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/statistics">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-clipboard2-data-fill" viewBox="0 0 16 16">
