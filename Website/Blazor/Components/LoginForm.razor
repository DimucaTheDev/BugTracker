@using System.Web 
@{
    var q = HttpUtility.ParseQueryString(new Uri(Navigation.Uri).Query);
}
<div class="login-box" style="width: 100%">
    <form method="post" id="login_form" action="/api/auth/login">
        <label for="username">@(Localizer["login_username"])</label>
        <input type="text" id="username" name="username">

        <label for="password">@(Localizer["login_password"])</label>
        <input type="password" id="password" name="password">

        <div>
            <input type="checkbox" id="remember" name="remember">
            <label for="remember" style="display: inline;">@(Localizer["login_remember"])</label>
        </div>

        <div class="actions">
            <button type="submit">@(Localizer["login_login"])</button>
            <button type="button" @onclick='() => { Navigation.NavigateTo($"/register?redir={q["redir"]??"/"}"); }' >@(Localizer["login_register"])</button>
        </div>
        <p id="login_error" style="color: red; text-align: center"></p>
        <a href="/restore">@(Localizer["login_forgot"])</a>
    </form>
</div>

<script>post_login_form();</script>
 